#include <stdio.h>
#include <locale.h>

int main(){
    setlocale(LC_ALL, "Portuguese");
    int num;
    printf("Digite um número: ");
    scanf("%d", &num);
    if(num == 0){
        printf("\nÉ zero.");
    }
    if(num<0){
        printf("\nÉ negativo");
    }
    if(num >0){
        printf("\nÉ positivo");

    }

    return 0;
}
